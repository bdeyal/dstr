# dstr NMakefile
#
!IF "$(COMP)" == "clang"
CC = clang-cl.exe
CXX = clang-cl.exe
CFLAGS = -O2 /MD /D_CRT_SECURE_NO_WARNINGS /I..\include
CXXFLAGS = $(CFLAGS)
!ELSE
CC = cl.exe
CXX = cl.exe
CFLAGS = /EHsc /O2 /nologo /MD /I..\include
CXXFLAGS = /EHsc $(CFLAGS)
!ENDIF

PROGRAMS = dstrtest.exe dstrtest_pp.exe test_dgets.exe
DEPS = ..\include\dstr\dstr.h
DEPS_PP = ..\include\dstr\dstring.hpp ..\include\dstr\dstr.h

all: $(PROGRAMS)

dstrtest.exe: dstr.obj dstrtest.obj
	$(CC) /nologo /MD -Fe"dstrtest.exe" dstr.obj dstrtest.obj

dstrtest_pp.exe: dstr.obj dstrtest_pp.obj
	$(CXX) /nologo /MD -Fe"dstrtest_pp.exe" dstr.obj dstrtest_pp.obj

test_dgets.exe: dstr.obj test_dgets.obj
	$(CXX) /nologo /MD -Fe"test_dgets.exe" dstr.obj test_dgets.obj

clean:
	del *~ *.obj

distclean: clean
	del $(PROGRAMS)

test: $(PROGRAMS)
	.\dstrtest.exe
	.\dstrtest_pp.exe
	.\test_dgets.exe

dstr.obj: ..\src\dstr.c $(DEPS)
	$(CC) -c $(CFLAGS) -DNDEBUG ..\src\dstr.c

dstrtest.obj: ..\test\dstrtest.c $(DEPS)
	$(CC) -c $(CFLAGS) ..\test\dstrtest.c

dstrtest_pp.obj: ..\test\dstrtest_pp.cpp $(DEPS_PP)
	$(CXX) -c $(CXXFLAGS) ..\test\dstrtest_pp.cpp

test_dgets.obj: ..\test\test_dgets.cpp $(DEPS_PP)
	$(CXX) -c $(CXXFLAGS) ..\test\test_dgets.cpp
